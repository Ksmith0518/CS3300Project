<%= form_with(model: game) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Title %>
    <%= form.text_field :Title %>
  </div>

  <div class="field">
    <%= form.label :Description %>
    <%= form.text_area :Description %>
  </div>

  <div class="field">
    <%= form.label :Rating %>
    <%= form.number_field :Rating, step:0.5 %>
  </div>

  <div class="field">
    <%= form.label :"Release Date" %>
    <%= form.text_area :ReleaseDate %>
  </div>

  <div class="field">
    <%= form.label :"Number Of Players" %>
    <%= form.number_field :NumberOfPlayers %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
